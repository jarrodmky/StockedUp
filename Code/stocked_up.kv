#:kivy 2.0.0

<LedgerSetup@Screen>:
    AnchorLayout :
        pos : root.pos
        size : root.size
        GridLayout :
            size_hint : (0.5, None)
            height : 4 * app.fixed_button_height
            rows : 4
            cols : 1
            Button :
                text : "Load Ledger"
                on_release :
                    root.manager.load_default_ledger()
            Button :
                text : "Load Ledger From Directory"
                on_release :
                    root.manager.swap_screen("LedgerLoader")
            Button :
                text : "Create Ledger"
                on_release :
                    root.manager.swap_screen("LedgerCreator")
            Button :
                text : "Import Ledgers"
                on_release :
                    root.manager.import_ledgers()

<LedgerLoader>:
    BoxLayout :
        size : root.size
        pos : root.pos
        orientation : "vertical"
        FileChooserListView :
            id : filechooser
            rootpath : str(app.data_root_directory)
            path : self.rootpath
        FloatLayout :
            size_hint : (0.5, None)
            GridLayout :
                size_hint : (1, None)
                height : app.fixed_button_height
                rows : 1
                cols : 2
                Button :
                    text : "Load"
                    on_release :
                        root.on_load_ledger(filechooser.path, filechooser.selection)
                Button :
                    text : "Cancel"
                    on_release :
                        root.manager.swap_screen("LedgerSetup")

<LedgerCreator>:
    AnchorLayout :
        pos : root.pos
        size : root.size
        GridLayout :
            size_hint : (0.5, None)
            height : 2 * app.fixed_button_height
            rows : 2
            cols : 2
            Label :
                text : "New ledger name : "
            LedgerNameInput :
                id : ledger_name
                text : "DEFAULT_LEDGER_FOLDER"
            Button :
                text : "Create"
                on_release :
                    root.on_create_ledger(ledger_name.text)
            Button :
                text : "Cancel"
                on_release :
                    root.manager.swap_screen("LedgerSetup")

<AccountTreeViewEntry>:
    anchor_x : "left"
    height : app.fixed_button_height - mm(0.5)
    account_name_entry : account_name_entry
    no_selection : True
    GridLayout:
        size_hint : (0.5, 0.8)
        rows : 1
        cols : 2
        Label :
            id : account_name_entry
            text : "SOME_ACCOUNT_NAME"
        Button :
            text : "view"
            size_hint_x : None
            width : mm(40)
            on_release :
                root.open_callback(root.account_name)

<LedgerViewer>:
    name : "LedgerViewer"
    tree_view_widget : tree_view_widget
    BoxLayout:
        pos : root.pos
        size : root.size
        orientation : "vertical"
        ScrollView :
            pos : (0,0)
            scroll_type : ["bars", "content"]
            bar_color : app.scroll_bar_colour
            bar_inactive_color : app.scroll_bar_inactive_colour
            bar_width : app.scroll_bar_width
            TreeView :
                id : tree_view_widget
                hide_root : True
                indent_level : 6
                size_hint : (1, None)
        GridLayout :
            size_hint : (0.5, None)
            height : app.fixed_button_height
            rows : 1
            cols : 2
            Button :
                text : "Unaccounted"
                on_release :
                    root.view_unused_transactions()
            Button :
                text : "Cancel"
                on_release :
                    root.manager.pop_overlay()

<AccountViewer>:
    name : "AccountViewer"
    account_name_label : account_name_label
    account_data_table : account_data_table
    query_input : query_input

    AnchorLayout:
        y : root.height - app.account_viewer_fixed_size
        anchor_x : "center"
        height : app.account_viewer_fixed_size
        size_hint : (1, None)
        BoxLayout :
            size_hint : (0.5, None)
            orientation : "vertical"
            Label :
                id : account_name_label
                text : "SOME_ACCOUNT_NAME"
            BoxLayout :
                Label :
                    size_hint : (0.4, 1)
                    text : "Query :"
                TextInput :
                    id : query_input
                    text : ""
            BoxLayout :
                Button :
                    text : "filter"
                    on_release :
                        root.filter_by_description(str(root.query_input.text))
                Button :
                    text : "exit"
                    on_release :
                        root.manager.pop_overlay()
    DataFrameTable :
        id : account_data_table
        height : root.height - app.account_viewer_fixed_size
        size_hint : (1, None)

<StockedUpAppManager>:
    LedgerSetup:
        name : "LedgerSetup"
    LedgerLoader:
        name : "LedgerLoader"
    LedgerCreator:
        name : "LedgerCreator"
