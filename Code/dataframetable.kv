#:kivy 2.0.0

<TableHeaderCell>:
    text_size : self.size
    halign : "center"
    valign : "middle"
    height : app.fixed_button_height
    on_release :
        root.parent.parent.parent.sort_by(self.text)

<TableHeader>:
    size_hint : (None, None)
    height : self.minimum_height

<TableDataCell@TextInput>:
    font_size : "16dp"
    halign : "center"
    readonly : True
    foreground_color : (1,1,1,1)

<TableData>:
    table_grid_layout : table_grid_layout
    viewclass : "TableDataCell"
    scroll_type : ["bars", "content"]
    do_scroll_x : False
    always_overscroll : False
    bar_color : app.scroll_bar_colour
    bar_inactive_color : app.scroll_bar_inactive_colour
    bar_width : app.scroll_bar_width
    RecycleGridLayout :
        id : table_grid_layout
        rows : root.parent.nrows
        cols : root.parent.ncols
        size_hint : (1, None)

<Table>:
    orientation : "vertical"
    table_header : table_header
    table_data : table_data
    TableHeader :
        id : table_header
        height : mm(8)
        size_hint : (1, None)
    TableData :
        id : table_data

<DataFrameTable>:
    orientation : "vertical"
